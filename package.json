{
  "name": "huangsam.github.io",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync",
    "prepare:e2e": "playwright install --with-deps",
    "test": "vitest",
    "test:e2e": "NODE_OPTIONS=--no-experimental-strip-types playwright test",
    "report:e2e": "playwright show-report",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "svelte-kit sync && prettier --check . && eslint .",
    "format": "prettier --write .",
    "github": "vite build && gh-pages -d build -t"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.43.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.39.6",
    "svelte-check": "^4.3.2",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
