{
  "name": "huangsam.github.io",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync",
    "prepare:e2e": "playwright install --with-deps",
    "test": "vitest",
    "test:e2e": "NODE_OPTIONS=--no-experimental-strip-types playwright test",
    "report:e2e": "playwright show-report",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "svelte-kit sync && prettier --check . && eslint .",
    "format": "prettier --write .",
    "github": "vite build && gh-pages -d build -t"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.25.1",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.16.5",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.36.13",
    "svelte-check": "^4.3.0",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
