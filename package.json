{
  "name": "huangsam.github.io",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync && husky",
    "prepare:e2e": "playwright install --with-deps",
    "test": "vitest",
    "test:e2e": "NODE_OPTIONS=--no-experimental-strip-types playwright test",
    "report:e2e": "playwright show-report",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "svelte-kit sync && prettier --check . && eslint .",
    "format": "prettier --write .",
    "github": "vite build && gh-pages -d build -t"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.46.1",
    "svelte-check": "^4.3.5",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "dependencies": {
    "hotkeys-js": "^4.0.0"
  }
}
