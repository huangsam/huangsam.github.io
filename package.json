{
  "name": "huangsam.github.io",
  "description": "Holds links to my commonly used pages",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.5",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.5",
    "ajv": "^6.9.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.4",
    "core-js": "^3.0.0",
    "css-loader": "^2.0.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.1.3",
    "jest": "^24.5.0",
    "jest-haste-map": "^24.1.0",
    "jest-resolve": "^24.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.10.0",
    "prettier": "^1.16.4",
    "puppeteer": "^1.10.0",
    "sass-loader": "^7.1.0",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.10"
  },
  "scripts": {
    "dev:start": "webpack-dev-server",
    "dev:build": "webpack --progress",
    "lint": "eslint app *.config.js",
    "lint:fix": "yarn lint --fix",
    "test": "jest -c jest.config.js",
    "test:watch": "yarn test --watch",
    "test:unit": "jest -c jest-unit.config.js",
    "test:e2e": "jest -c jest-e2e.config.js",
    "prod:build": "webpack -p --progress",
    "fmt": "prettier --write \"app/**/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:unit",
      "pre-push": "yarn lint && yarn test:unit && yarn prod:build"
    }
  }
}
