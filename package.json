  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "ajv": "^6.10.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.6.0",
    "babel-loader": "^8.0.5",
    "core-js": "^3.0.0",
    "css-loader": "^3.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^3.0.0",
    "jest": "^24.6.0",
    "jest-haste-map": "^24.6.0",
    "jest-resolve": "^24.6.0",
    "mini-css-extract-plugin": "^0.8.0",
    "prettier": "^1.16.4",
    "puppeteer": "^1.13.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "scripts": {
    "build:dev": "webpack --progress",
    "build:prod": "webpack -p --progress",
    "lint": "eslint src *.config.js",
    "fmt": "yarn lint --fix",
    "test": "jest -c jest.config.js",
    "test:unit": "jest -c jest-unit.config.js",
    "test:e2e": "jest -c jest-e2e.config.js",
    "test:watch": "yarn test:unit --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:unit",
      "pre-push": "yarn build:prod"
    }
  }
