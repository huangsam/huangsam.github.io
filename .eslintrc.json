{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "indent": ["warn", 2],
    "brace-style": 1,
    "comma-dangle": ["warn", "always-multiline"],
    "comma-style": 1,
    "wrap-regex": 1,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "semi": 2,
    "valid-jsdoc": 2,
    "no-alert": 0,
    "arrow-parens": 0,
    "prettier/prettier": ["error"]
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "jest": true
  }
}
