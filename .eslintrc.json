{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "rules": {
    "indent": ["warn", 2],
    "brace-style": 1,
    "comma-dangle": ["warn", "always-multiline"],
    "comma-style": 1,
    "wrap-regex": 1,
    "semi": 2,
    "valid-jsdoc": 2,
    "no-alert": 0,
    "arrow-parens": 0,
    "prettier/prettier": ["error"]
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  }
}
